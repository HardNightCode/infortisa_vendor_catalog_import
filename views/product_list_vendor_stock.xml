<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- AÃ±adir columnas 'Stock' y 'Proveedor' en la lista de product.template -->
  <record id="view_product_template_tree_add_vendor_stock" model="ir.ui.view">
    <field name="name">product.template.tree.add.vendor.stock</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='qty_available']" position="after">
        <field name="x_vendor_stock" string="Stock" readonly="1"/>
        <field name="x_vendor_name"  string="Proveedor" readonly="1"/>
      </xpath>
    </field>
  </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="product_vendor_stock" inherit_id="website_sale.product"
            name="Mostrar stock en ficha (grande)">
    <xpath expr="//h1" position="after">
      <t t-if="'x_vendor_stock' in product._fields">
        <!-- Quitamos text-muted y subimos tamaÃ±o con fs-5 (Bootstrap) -->
        <div class="mt-2 o_vendor_stock fs-5">
          <span class="me-1"><i class="fa fa-truck"/> </span>
          Stock:
          <strong t-esc="product.x_vendor_stock or 0"/>
        </div>
      </t>
    </xpath>
  </template>
</odoo>

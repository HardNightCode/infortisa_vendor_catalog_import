<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Columna en el árbol de tarifas de proveedor -->
  <record id="view_supplierinfo_add_vendor_stock_tree" model="ir.ui.view">
    <field name="name">product.supplierinfo.add.vendor.stock.tree</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='price']" position="before">
        <field name="x_vendor_stock_info" readonly="1" optional="show"/>
      </xpath>
    </field>
  </record>

  <!-- También en el formulario de supplierinfo -->
  <record id="view_supplierinfo_add_vendor_stock_form" model="ir.ui.view">
    <field name="name">product.supplierinfo.add.vendor.stock.form</field>
    <field name="model">product.supplierinfo</field>
    <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='price']" position="after">
        <field name="x_vendor_stock_info" readonly="1"/>
      </xpath>
    </field>
  </record>
</odoo>
